@model IEnumerable<sphinxsolaries.Caems.Data.Models.CAEMS_Client>
 
 
<div class="card">
    <div class="card-body">
        <h4 class="card-title">View Organizations</h4> 
        <div class="table-responsive">
            <table class="table table-striped table-bordered zero-configuration">
                <thead>
                    <tr>
                        <th>   </th> 
                        <th>Name</th>
                        @*<th>Service Company</th>*@
 
                    </tr> 
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>                            
                            <td>@Html.ActionLink("Select", "edit_Clients", new
                           {
                            id=item.Id, 
                            Service_Company = item.Service_company
                            ,Name = item.Name
                               })</td> 
                           <td>@Html.DisplayFor(modelItem => item.Name)</td>
                           @*<td>@Html.DisplayFor(modelItem => item.Service_company)</td>*@
                        </tr>
                    }
                    
                </tbody>
                <tfoot>
                    <tr>                        
                        <th>   </th> 
                        <th>Name</th>
                        @*<th>Service Company</th>*@
 
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div> 
<script> 
    function msg(txt) {
        sweetAlert("...", txt, "info");
    }
    var statusMessage = "@ViewBag.status" || false; 
    if (statusMessage != false && statusMessage.length > 0) {
        msg(statusMessage); 
    }
</script>