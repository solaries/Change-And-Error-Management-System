@model IEnumerable<sphinxsolaries.Caems.Data.Models.CAEMS_role_right_Admin>
 
 
<div class="card">
    <div class="card-body">
        <h4 class="card-title">View Admin Role To Rights</h4> 
        <div class="table-responsive">
            <table class="table table-striped table-bordered zero-configuration">
                <thead>
                    <tr>
                        <th>   </th> 
                        <th>role</th>
                        <th>right</th>
 
                    </tr> 
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>                            
                            <td>@Html.ActionLink("Select", "edit_Admin_Role_To_Rights", new
                           {
                            id=item.Id, 
                            right = item.Right
                            ,role = item.Role
                               })</td> 
                           <td>@Html.DisplayFor(modelItem => item.Role)</td>
                           <td>@Html.DisplayFor(modelItem => item.Right)</td>
                        </tr>
                    }
                    
                </tbody>
                <tfoot>
                    <tr>                        
                        <th>   </th> 
                        <th>role</th>
                        <th>right</th>
 
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div> 
<script> 
    function msg(txt) {
        sweetAlert("...", txt, "info");
    }
    var statusMessage = "@ViewBag.status" || false; 
    if (statusMessage != false && statusMessage.length > 0) {
        msg(statusMessage); 
    }
</script>